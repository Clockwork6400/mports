#!/bin/sh

args=`getopt amnr $*`
if [ $? != 0 ]
then
         echo 'Usage: uname -[arn]'
         exit 2
fi
           set -- $args
           # You cannot use the set command with a backquoted getopt directly,
           # since the exit code from getopt would be shadowed by those of set,
           # which is zero by definition.
           for i
           do
                   case "$i"
                   in
                           -a|-r|-m|-n)
                                   sflags="${i#-}$sflags";
                                   shift;;
                           --)
                                   shift; break;;
                   esac
           done
#           echo single-char flags: "'"$sflags"'"
#           echo oarg is "'"$oarg"'"

if [ $sflags == 'm' ]; then
	uname -m;
fi
if [ $sflags == 'n' ]; then
	uname -n;
fi
if [ $sflags == 'r' ]; then
	echo '11.4-RELEASE'
fi
if [ $sflags == 'a' ]; then
	echo "FreeBSD `uname -n` 11.4-RELEASE FreeBSD 11.4-RELEASE GENERIC `uname -m`"
fi
